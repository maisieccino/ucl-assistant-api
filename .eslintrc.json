{
  "extends": [
    "prettier",
    "prettier/flowtype",
    "import"
  ],
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["import"],
  "rules": {
    "global-require": "off",
    "comma-dangle": ["error", "always-multiline"],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/*.{js}", "*.test.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["**/*-stories.js"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true,
            "optionalDependencies": false,
            "peerDependencies": false
          }
        ]
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
