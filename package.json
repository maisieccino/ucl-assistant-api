{
  "name": "ucl-assistant-api",
  "version": "0.4.7",
  "description": "Server to support the UCL Assistant app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:dev": "nodemon server",
    "lint": "eslint . --ext .js --ext .jsx --cache --ignore-path .eslintignore",
    "lint:force": "eslint . --ext .js --ext .jsx --ignore-path .eslintignore",
    "lint:staged": "lint-staged",
    "format": "prettier --config .prettierrc.json --write all **/*.{js,jsx}",
    "test": "yarn jest --ci && yarn run lint:force"
  },
  "repository": "https://github.com/uclapi/ucl-assistant",
  "author": "Matthew Bell",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "dotenv": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.3.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.10.1",
    "moment": "^2.24.0",
    "node-fetch": "^2.3.0",
    "raven": "^2.4.2",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-node": "^3.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-node": "^8.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --config .prettierrc.json --write all",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost/",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint:staged"
    }
  }
}
