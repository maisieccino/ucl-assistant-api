{
  "name": "ucl-assistant-api",
  "version": "0.6.0",
  "private": true,
  "description": "Server to support the UCL Assistant app",
  "repository": "https://github.com/uclapi/ucl-assistant",
  "license": "MIT",
  "author": "Matthew Bell",
  "main": "server.js",
  "scripts": {
    "format": "eslint . --fix --ext .js --ignore-path .eslintignore",
    "lint:staged": "lint-staged",
    "start": "node server.js",
    "start:dev": "nodemon server --ignore __tests__",
    "test": "TEST_MODE=true jest --ci",
    "test:dev": "TEST_MODE=true jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testURL": "http://localhost/"
  },
  "dependencies": {
    "@sentry/node": "^5.8.0",
    "axios": "^0.19.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.6.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.12.3",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-no-secrets": "^0.3.4",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2"
  }
}
