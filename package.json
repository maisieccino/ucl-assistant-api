{
  "name": "ucl-assistant-api",
  "version": "0.4.7",
  "description": "Server to support the UCL Assistant app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:dev": "nodemon server",
    "get-surveys": "node ./scripts/populateSurveyList.js",
    "lint": "eslint . --ext .js --ext .jsx --cache --ignore-path .eslintignore",
    "lint:force": "eslint . --ext .js --ext .jsx --ignore-path .eslintignore",
    "lint:staged": "lint-staged",
    "format": "prettier --config .prettierrc.json --write all **/*.{js,jsx}",
    "precommit": "yarn run lint:staged",
    "test": "yarn jest --ci && yarn run lint:force"
  },
  "repository": "https://github.com/uclapi/ucl-assistant",
  "author": "Matthew Bell",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "dotenv": "^4.0.0",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.3.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.5.1",
    "moment": "^2.24.0",
    "node-fetch": "^1.7.3",
    "raven": "^2.4.2",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "eslint": "4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-node": "^3.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-node": "^5.2.1",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "lint-staged": "^5.0.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --config .prettierrc.json --write all",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost/",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
