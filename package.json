{
  "name": "ucl-assistant-api",
  "version": "0.4.7",
  "private": true,
  "description": "Server to support the UCL Assistant app",
  "repository": "https://github.com/uclapi/ucl-assistant",
  "license": "MIT",
  "author": "Matthew Bell",
  "main": "server.js",
  "scripts": {
    "format": "prettier --config .prettierrc.json --write all **/*.{js}",
    "lint": "eslint . --ext .js --cache --ignore-path .eslintignore",
    "lint:force": "eslint . --ext .js --ignore-path .eslintignore",
    "lint:staged": "lint-staged",
    "start": "node server.js",
    "start:dev": "nodemon server --ignore __tests__",
    "test": "jest --ci && npm run lint:force",
    "test:dev": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --config .prettierrc.json --write all",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testURL": "http://localhost/"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.0",
    "koa-jwt": "^3.3.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.12.3",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "raven": "^2.4.2",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-node": "^9.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "sinon": "^7.3.0"
  }
}
